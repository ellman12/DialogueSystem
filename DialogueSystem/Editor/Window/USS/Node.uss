.node #title-label,
.node #divider {
    display: none;
}

.node {
    min-width: 200px;
}

.node #collapse-button { display: none; }
.node:hover #collapse-button { display: flex; }

.node #title-button-container {
    align-items: center;
    justify-content: space-between;
    padding-left: 4px;
    padding-right: 4px;
}

.node #title-button-container > * {
    flex-grow: 1;
    flex-shrink: 0;
    padding: 0;
}

.node #title-button-container > .unity-text-field {
    flex-shrink: 1;
}

.node #collapsible-area {
    padding: 8px;
    background-color: var(--light-grey-2);
}