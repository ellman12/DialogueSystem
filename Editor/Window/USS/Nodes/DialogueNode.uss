.node #title-label,
.node #divider {
    display: none;
}

.node {
    width: 250px;
}

.node #collapse-button {
    display: none;
    align-items: center;
    justify-content: center;
    width: auto;
}

.node:hover #collapse-button {
    display: flex;
}

.node #title-button-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-right: 2px;
}

.node #title-button-container > .unity-text-field {
    flex-shrink: 1;
    margin-right: 5px;
}

.node:hover #title-button-container .unity-text-field {
    margin-right: 2px;
}

.node #title-button-container .iconButton {
    display: none;
    width: 16px;
    height: 16px;
}

.node:hover #title-button-container .iconButton {
    display: flex;
}

.node #title-button-container > * {
    flex-grow: 1;
    flex-shrink: 0;
    padding: 0;
    margin: 0;
    margin-left: 2px;
    margin-right: 2px;
}

.node #collapsible-area {
    padding: 4px;
    background-color: var(--light-grey-2);
}

.node #collapsible-area .unity-text-field {
    max-height: 100px;
}